guess("Homer Simpsom") :- homer_simpsom, !.
guess(tweety) :- tweety, !.
guess(walter_white) :- walter_white, !.
guess("desconhecida neste sistema").             

/* regras */
pessoa:- tem_gênero.

animal:- verify(é_um_animal),!.
animal:- not(pessoa).

presidente:- pessoa,
    famoso,
    verify(é_presidente).

famoso:- verify(é_famoso).

brasileiro:- verify(nasceu_no_Brasil).

cartoon:- (animal ; pessoa),
    famoso,
    verify(é_um_desenho).

/*personagens*/
